<mvc:View controllerName="com.namespace.controller.Root" xmlns="sap.m" xmlns:mvc="sap.ui.mvc">
    <App>
        <Page title="{i18n>appTitle}">
            <HBox>
                <Label text="{i18n>cityLabel}" labelFor="city_name" />
                <Input value="{/city/name}" id="city_name" />
                <Button text="{i18n>getWeatherDataButton}" press=".onButtonPressed" />
            </HBox>
        </Page>
    </App>
</mvc:View>
